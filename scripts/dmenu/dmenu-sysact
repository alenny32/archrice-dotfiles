#!/bin/sh

# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
    *"systemd"*)
        ctl="systemctl"
        ;;
    *)
        ctl="loginctl"
        ;;
esac

# source Xresources colors
[ -f "${XDG_DATA_HOME:-${HOME}/.local/share}/xcolors" ] ||
    gen-xcolors
. "${XDG_DATA_HOME:-${HOME}/.local/share}/xcolors"

# dmenu configuration
dmenu_options="-i -nb $color0 -nf $color3 -sb $color3 -sf $color0"
dmenu_prompt="dmenu $dmenu_options -p"
dmenu_prompt_msg="Action:"

# This function is needed if there are multiple instances of the window manager.
wmpid(){
    tree="$(pstree -ps $$)"
    tree="${tree#*"$WM"(}"
    echo "${tree%%)*}"
}

# action="$(printf "\
# ğŸ”’ lock\n\
# ğŸšª leave $WM\n
# â™»ï¸ renew $WM\n
# ğŸ» hibernate\n
# ğŸ”ƒ reboot\n
# ğŸ–¥ï¸ shutdown\n
# ğŸ’¤ sleep\n
# ğŸ“º display off\n\
#     " | dmenu -i -p 'Action: ')"

# case "$action" in
#     "â™»ï¸ renew $WM") bspc wm -r ;;
#     'ğŸ» hibernate') $ctl hibernate ;;
#     'ğŸ’¤ sleep') $ctl suspend-then-hibernate ;;
#     'ğŸ”ƒ reboot') $ctl reboot -i ;;
#     'ğŸ–¥ï¸ shutdown') $ctl poweroff -i ;;
#     'ğŸ“º display off') xset dpms force off ;;
#     *) exit 1 ;;
# esac

action="$(printf "\
ï€‘ Power Off\n\
ï€ Reboot\n\
ó°¤„ Suspend\n\
ï‹œ Hibernate\n\
ó°ƒ Log Out\n\
ï€£ Lock\n\
ó°¶ Display Off\n\
    " | ${dmenu_prompt} "$dmenu_prompt_msg")"

case "$action" in
    "ï€‘ Power Off")
        $ctl poweroff
        ;;
    "ï€ Reboot")
        $ctl reboot
        ;;
    "ó°¤„ Suspend")
        $ctl suspend-then-hibernate
        ;;
    "ï‹œ Hibernate")
        $ctl hibernate
        ;;
    "ó°ƒ Log Out")
        pkill --euid "$USER"
        # bspc quit
        ;;
    "ï€£ Lock")
        betterlockscreen -l
        ;;
    "ó°¶ Display Off")
        xset dpms force off
        ;;
    *)
        exit 1
        ;;
esac
