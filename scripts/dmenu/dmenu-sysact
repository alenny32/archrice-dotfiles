#!/bin/sh

# A dmenu wrapper script for system functions.
export WM="bspwm"
case "$(readlink -f /sbin/init)" in
    *systemd*) ctl="systemctl" ;;
    *) ctl="loginctl" ;;
esac

# source Xresources colors
[ -f "${XDG_DATA_HOME:-${HOME}/.local/share}/xcolors" ] || \
    gen-xcolors
. "${XDG_DATA_HOME:-${HOME}/.local/share}/xcolors"

# dmenu configuration
dmenu_options="-i -nb "${color0}" -nf "${color3}" -sb "${color3}""
dmenu_prompt="dmenu $dmenu_options -p"
dmenu_prompt_msg="Action:"

# This function is needed if there are multiple instances of the window manager.
wmpid(){
    tree="$(pstree -ps $$)"
    tree="${tree#*"$WM"(}"
    echo "${tree%%)*}"
}

# action="$(printf "\
# ğŸ”’ lock\n\
# ğŸšª leave $WM\n
# â™»ï¸ renew $WM\n
# ğŸ» hibernate\n
# ğŸ”ƒ reboot\n
# ğŸ–¥ï¸ shutdown\n
# ğŸ’¤ sleep\n
# ğŸ“º display off\n\
#     " | dmenu -i -p 'Action: ')"

# case "$action" in
#     "â™»ï¸ renew $WM") bspc wm -r ;;
#     'ğŸ» hibernate') $ctl hibernate ;;
#     'ğŸ’¤ sleep') $ctl suspend-then-hibernate ;;
#     'ğŸ”ƒ reboot') $ctl reboot -i ;;
#     'ğŸ–¥ï¸ shutdown') $ctl poweroff -i ;;
#     'ğŸ“º display off') xset dpms force off ;;
#     *) exit 1 ;;
# esac

action="$(printf "\
ï€‘ Power Off\n\
ï€ Reboot\n\
ï†† Suspend\n\
ï‹œ Hibernate\n\
ï¡‚ Log Out\n\
ï€£ Lock\n\
ó°¶ Display Off\n\
    " | ${dmenu_prompt} "$dmenu_prompt_msg")"

case "$action" in
    "ï€‘ Power Off") $ctl poweroff ;;
    "ï€ Reboot") $ctl reboot ;;
    "ï†† Suspend") $ctl suspend-then-hibernate ;;
    "ï‹œ Hibernate") $ctl  hibernate ;;
    # "ï¡‚ Log Out") bspc quit ;;
    "ï¡‚ Log Out") loginctl session-status | awk 'NR==1 {print $1}' | xargs loginctl terminate-session "$1" ;;
    "ï€£ Lock") betterlockscreen -l ;;
    "ó°¶ Display Off") xset dpms force off ;;
    *) exit 1 ;;
esac
